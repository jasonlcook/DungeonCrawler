@page "/"
<div id="play-area">
    <div class="dungon">
        <div id="stage"></div>
    </div>
    <div class="details">
        <div class="level">
            <div>
                <span class="label">Level</span>
                <span class="value" id="current-level">0</span>
            </div>
        </div>
        <div class="stats">
            <div class="health">
                <span class="label">Health</span>
                <span class="value" id="current-health">0</span>
            </div>
            <div class="Strength">
                <span class="label">Strength</span>
                <span class="value" id="current-strength">0</span>
            </div>
            <div class="Armour">
                <span class="label">Armour</span>
                <span class="value" id="current-armour">0</span>
            </div>
        </div>
        <div class="dice">
            <div id="current-dice-safe"></div>
            <div id="current-dice-danger"></div>
        </div>
        <div id="log"></div>
    </div>
</div>
<script>
    dungeon_crawler_main_startup();
</script>