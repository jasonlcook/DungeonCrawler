@page "/"
<canvas id="myCanvas"></canvas>
<script>
    var c = document.getElementById("myCanvas");

    var ctx = c.getContext("2d");

    var img = new Image();
    img.src = "./images/tiles/blank.png";

    c.height = img.height * 10;
    c.width = (img.width * 2) + (img.width / 2);

    var width = (c.width / 2) - (img.width / 2);

    //middle
    for (var i = 0; i < 11; i++) {
        height = c.height - img.height * i;
        ctx.drawImage(img, width, height);
    }

    //left
    for (var i = 1; i < 10; i++) {
        height = c.height - ((img.height / 2) + img.height * i);
        width = (c.width / 2) - (img.width + (img.width / 4));

        ctx.drawImage(img, width, height);
    }

    //right
    for (var i = 1; i < 10; i++) {
        height = c.height - ((img.height / 2) + img.height * i);
        width = ((c.width / 2) + (img.width / 4));

        ctx.drawImage(img, width, height);
    }

</script>